{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "allowJs": false,
    "strict": true,
    "sourceMap": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "removeComments": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}